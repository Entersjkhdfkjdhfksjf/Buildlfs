# Pkgfile for ffmpeg

name=ffmpeg
version=6.0
release=1
source=(https://$name.org/releases/$name-$version.tar.xz)

pkg_build() {
	./configure \
	--prefix=/usr \
	--enable-gpl         \
	--enable-version3    \
	--enable-nonfree     \
	--disable-static     \
	--enable-shared      \
	--disable-debug      \
	--enable-openssl
	make
	make install
}
