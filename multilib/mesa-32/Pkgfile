# Pkgfile for mesa

name=mesa-32
version=23.1.6
release=1
source=(https://archive.mesa3d.org/mesa-$version.tar.xz crossfile)
build_opt="
	--native-file ../crossfile
	-Dplatforms=x11
	-Dgallium-drivers=auto
	-Dvulkan-drivers=""
	-Dvalgrind=disabled
	-Dlibunwind=disabled
	-Dglvnd=true
"
export LLVM_CONFIG="/usr/bin/llvm-config-32"
