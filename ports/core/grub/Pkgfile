# Description: The GRand Unified Bootloader
# URL:         https://www.gnu.org/software/grub/
# Maintainer:  Emmett1, emmett1 dot 2miligrams at gmail dot com
# Depends on:  gettext bash xz fuse2 python3

name=grub
version=2.04
release=1
source=(https://ftp.gnu.org/gnu/$name/$name-$version.tar.xz grub.default
	Fix-GRUB-i386-pc-build-with-Ubuntu-gcc.patch)

build() {
        cd $name-$version

	patch -Np1 -i ../Fix-GRUB-i386-pc-build-with-Ubuntu-gcc.patch

	autoreconf -fiv
        ./configure --prefix=/usr \
                    --sbindir=/sbin \
                    --sysconfdir=/etc \
                    --disable-efiemu \
                    --disable-werror \
                    --enable-grub-mount
        make
        make DESTDIR=$PKG install

	install -D -m0644 $SRC/grub.default $PKG/etc/default/grub
}
